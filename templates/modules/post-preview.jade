div(data-module="wfm-post-preview")
  article
    div.post-image
      img(ng-src="{{postContent.postImage.src}}" alt="")

    div.post-artists
      ul.nolist
        li.post-artist(ng-repeat="artist in postContent.postArtists.artists")
          img(ng-src="{{artist.pic}}" alt="")
          div.artist-meta
            span {{artist.name}}
            a.expand(ng-click="showDetails = ! showDetails") Expand

            div.more-info-container(ng-class="{ 'hidden': ! showDetails }")
              div.more-info
                h3 About {{artist.name}}
                p(ng-bind-html="trustAsHtml(artist.bio)")
                h3 Upcoming Tours
                //p {{artist.tours}}

    div.post-title
      div.user-avatar
        div.user-meta
          h3 {{postContent.user.name}}
          span {{postContent.user.description}}
          span {{postContent.user.location}}
      h2(ng-model="postContent.postCaption.text") {{postContent.postCaption.text}}

    div.post-meta
      div.post-date
        {{postContent.datestamp}}
      div.share-bar
        ul.nolist
          li.post-delete 
          li.post-comment
          li.post-fav
          li.post-share
